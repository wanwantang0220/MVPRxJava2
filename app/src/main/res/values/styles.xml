<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="LoadingLayoutStyle">
        <item name="llEmptyResId">@layout/empty_view</item>
        <item name="llLoadingResId">@layout/load_view</item>
        <item name="llErrorResId">@layout/error_view</item>

        <item name="llTextColor">@color/font_gray</item>
        <item name="llTextSize">16sp</item>

        <item name="llButtonTextColor">@color/button_red</item>
        <item name="llButtonTextSize">16sp</item>
        <item name="llButtonBackground">@drawable/button_red_hollow_normal_bg</item>

        <item name="llEmptyImage">@null</item>
        <item name="llEmptyText">@string/no_data</item>
        <item name="llErrorImage">@null</item>
        <item name="llErrorText">@null</item>
        <item name="llRetryText">@string/retry</item>

        <item name="llShowLoading">true</item>
    </style>

</resources>
